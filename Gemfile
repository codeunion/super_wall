source 'https://rubygems.org'
ruby '2.1.2'

# Server-related gems
gem 'rails', '4.1.6'
gem 'thin'
gem 'quiet_assets', '~> 1.0.1'

# Database-related gems
gem 'pg'
gem 'bcrypt', '~> 3.1.7'

# Asset-related gems
gem 'sass-rails', '~> 4.0.3'
gem 'uglifier', '>= 1.3.0'

# Application-related gems
gem 'jquery-rails'

group :doc do
  gem 'sdoc', '~> 0.4.0'
end

group :development do
  gem 'spring'
end

group :development, :test do
  gem 'rspec-rails'
  gem 'shoulda-matchers'
  gem 'factory_girl_rails'
  gem 'faker'
end

group :production do
  gem 'rails_12factor'
end
